    <script type="text/ecmascript">
        $(function (){
           $('.modal-login').click(function(){
               $(this).addClass("modal-active");
               $('.modal-enroll').removeClass("modal-active");
               $('.login').show();
               $('.enroll').hide();
               })
           $('.modal-enroll').click(function () {
               $(this).addClass("modal-active");
               $('.modal-login').removeClass("modal-active");
               $('.login').hide()
               $('.enroll').show();
              })
        })
    </script>
}
