@using System.Xml.Linq;
@using Webdiyer.WebControls.Mvc;
@model PagedList<Start.Entity.UsersInfo>

<p class="highlight">用户列表 </p>
<form action="/Admin/UsersList" class="form-inline" method="get">
     <div class="form-group input-group-sm">
        <label class="control-label">名称</label>
        <input type="text" value="@ViewBag.UsresInfo.Name" name="name" class="form-control" />
     </div>
    <div class="form-group">
         <input type="submit" class="btn btn-primary" value="搜索" />
    </div>
</form>
<table class="table table-bordered mt table-hover">
    <thead>
        <tr>
            <th>编号</th>
            <th>登陆名称</th>
            <th>邮箱</th>
            <th>手机</th>
            <th>真是姓名</th>
            <th>注册日期</th>
            <th>状态</th>
            <th>用户组</th>
            <th>照片</th>
        </tr>
    </thead>
    <tbody>
        @{int index = -1; }
        @foreach (var item in Model)
        {
            index += 1;
            <tr>
                    <td>@item.ID</td>
                    <td><a href="/Admin/Users/@item.ID">@item.Name</a></td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.RealName</td>
                    <td>@item.Date</td>
                    <td>@(item.Status == Convert.ToInt16(Start.Entity.EnumStatus.YES) ? "审核" : "未审核")</td>
                    <td>@(item.UserGroup == Convert.ToInt16(Start.Entity.EnumUserGroup.Admin) ? "管理员" : "普通用户")</td>
                    <td>@item.Photo</td>                      
            </tr>
        }
    </tbody>
</table> 
@Html.Pager(Model,new PagerOptions{PageIndexParameterName = "pageIndex",CssClass="pagination"})
